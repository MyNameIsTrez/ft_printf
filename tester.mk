################################################################################

include Makefile

################################################################################

TESTED_SOURCES := libftprintf.a

TESTER_HEADERS := tests/tests.h

TEST_DIR := tests

################################################################################

TESTER_SOURCES := $(wildcard $(TEST_DIR)/*.c) tester.c

TEST_INCLUDES := $(addprefix -I, $(sort $(dir $(TESTER_HEADERS))))

################################################################################

tester: bonus $(TESTER_HEADERS) $(TESTER_SOURCES)
	$(CC) $(CFLAGS) $(TEST_INCLUDES) -g3 $(TESTED_SOURCES) $(TESTER_SOURCES) -o tester

################################################################################

.PHONY: tester

